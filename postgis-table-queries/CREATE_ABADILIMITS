CREATE TABLE ABADILIMITS(
    GID                         SERIAL  PRIMARY KEY,
    DISTRICT                    TEXT,
    VILLAGESELECTED             TEXT,
    UNIQUEVILLAGECODE           TEXT,
    ABADILIMITNAME              TEXT,
    NOOFPROPERTIES              TEXT,
    MARKINGSTARTDATE            TEXT,
    MARKINGENDDATE              TEXT,
    VILLAGENAME                 TEXT,
    VILLAGELGDCODE              TEXT,
    ABADIAREASCOUNTINVILLAGE    TEXT,
    GRAMPANCHAYAT               TEXT,
    HOBLI                       TEXT,
    TALUK                       TEXT,
    CREATORINFO                 TEXT,
    APPROVERINFO                TEXT,
    GEOM                        GEOMETRY(POLYGON, 4326),
    SERVERDATE                  DATE NOT NULL DEFAULT CURRENT_DATE,
    SERVERTIME                  TIME NOT NULL DEFAULT CURRENT_TIME
);
