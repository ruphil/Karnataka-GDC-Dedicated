CREATE TABLE ABADILIMITS(
    GID                         SERIAL  PRIMARY KEY,
    DISTRICT                    TEXT NOT NULL,
    TALUK                       TEXT,
    HOBLI                       TEXT,
    GRAMPANCHAYAT               TEXT,
    VILLAGENAME                 TEXT,
    VILLAGELGDCODE              TEXT,
    GISSELECTEDVILLAGE          TEXT NOT NULL,
    UNIQUEVILLAGECODE           TEXT NOT NULL,
    ABADILIMITNAME              TEXT NOT NULL,
    ABADILIMITUUID              TEXT NOT NULL,
    NOOFPROPERTIES              TEXT,
    MARKINGSTARTDATE            TEXT,
    MARKINGENDDATE              TEXT,
    ABADIAREASCOUNTINVILLAGE    TEXT,
    CREATORINFO                 TEXT,
    APPROVERINFO                TEXT,
    GEOM                        GEOMETRY(POLYGON, 4326),
    SERVERDATE                  DATE NOT NULL DEFAULT CURRENT_DATE,
    SERVERTIME                  TIME NOT NULL DEFAULT CURRENT_TIME
);
