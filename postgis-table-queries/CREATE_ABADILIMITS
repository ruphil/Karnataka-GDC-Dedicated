CREATE TABLE ABADILIMITS(
    ID                  SERIAL  PRIMARY KEY,
    ABADILIMITNAME      TEXT,
    NOOFPROPERTIES      TEXT,
    MARKINGSTARTDATE    TEXT,
    MARKINGENDDATE      TEXT,
    VILLAGENAME         TEXT,
    VILLAGELGDCODE      TEXT,
    GRAMPANCHAYAT       TEXT,
    HOBLI               TEXT,
    TALUK               TEXT,
    DISTRICT            TEXT,
    CREATORINFO         TEXT,
    APPROVERINFO        TEXT,
    GEOM                GEOMETRY(POLYGON, 3857),
    SERVERDATE          DATE NOT NULL DEFAULT CURRENT_DATE,
    SERVERTIME          TIME NOT NULL DEFAULT CURRENT_TIME
);
