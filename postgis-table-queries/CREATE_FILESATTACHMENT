CREATE TABLE filesattachment(
    ID                  SERIAL  PRIMARY KEY,
    VILLAGENAME         TEXT    NOT NULL,
    UNIQUEVILLAGECODE   TEXT    NOT NULL,
    ABADILIMITNAME      TEXT    NOT NULL,
    ABADILIMITUUID      TEXT    NOT NULL,
    IDENTIFIER          TEXT    NOT NULL,
    FILETYPE            TEXT,
    DESCRIPTION         TEXT,
    UPLOADERINFO        TEXT,
    FILELOCATION        TEXT    NOT NULL,
    APPROVERINFO        TEXT,
    SERVERDATE          DATE    NOT NULL DEFAULT CURRENT_DATE,
    SERVERTIME          TIME    NOT NULL DEFAULT CURRENT_TIME
);
